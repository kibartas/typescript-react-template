{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "pretty": true,
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.ts", "webpack.config.ts"]
}